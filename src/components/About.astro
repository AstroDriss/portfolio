---
import { Envelope, Phone } from "@phosphor-icons/react";
import { about } from "../constants";
---

<section
  id="about"
  class="flex flex-col md:flex-row justify-center gap-5 md:gap-3"
>
  <div class="about-box p-4 rounded-2xl">
    <h2 class="sr-only">About me</h2>
    {about}
  </div>
  <div
    class="contact-info border border-orange-900 rounded-xl relative before:bg-yellow-50 p-2 before:absolute before:inset-0 before:rounded-xl before:-z-10 before:left-1 before:top-1 text-orange-900"
  >
    <ul>
      <li>
        <a class="flex items-center gap-1" href="tel:+212651501766"
          ><Phone /> +212 651 501 766</a
        >
      </li>
      <li>
        <a
          class="flex items-center gap-1"
          href="mailto:drisspennywise@gmail.com"
        >
          <Envelope />
          drisspennywise@gmail.com
        </a>
      </li>
    </ul>
  </div>
</section>

<style>
  .about-box {
    border: 3px solid transparent;
    background-image: linear-gradient(white, white),
      linear-gradient(
        10deg,
        rgb(255, 25, 209),
        rgb(255, 12, 178),
        rgb(255, 25, 82),
        rgb(255, 170, 0),
        rgb(255, 208, 0)
      );

    background-origin: border-box;
    background-clip: padding-box, border-box;
    position: relative;
  }
  .about-box::before {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;
    background: linear-gradient(
      10deg,
      rgb(255, 25, 209),
      rgb(255, 12, 178),
      rgb(255, 25, 82),
      rgb(255, 170, 0),
      rgb(255, 208, 0)
    );
    border-radius: inherit;
    opacity: 0.6;
    filter: blur(9px);
  }
</style>
