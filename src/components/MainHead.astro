<meta charset="UTF-8" />
<meta name="description" content={description} />
<meta name="viewport" content="width=device-width" />
<title>{title}</title>

<meta
  name="keywords"
  content="portfolio,developer,douiri idriss,d'ouiri,driss,person,web developer,programmer"
/>

<link rel="sitemap" href="/sitemap.xml" />
<meta name="language" content="English" />
<meta name="author" content="Idriss Douiri" />

<link rel="privacy-policy" href="/privacy" />

<meta property="og:title" content={title} />
<meta property="og:site_name" content="douiri" />
<meta property="og:url" content="https://idriss.douiri.org" />
<meta property="og:description" content={description} />
<meta property="og:type" content="profile" />

<link
  rel="icon"
  media="(prefers-color-scheme: light)"
  type="image/svg+xml"
  href="/logo/LOGO D' light_mode.svg"
/>
